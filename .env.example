# Azure App Registration
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=common
AZURE_REDIRECT_URI=alfred://auth/microsoft/callback

# API App Registration (for OBO flow)
AZURE_API_CLIENT_ID=your-api-client-id
AZURE_API_SCOPE=api://your-api-client-id/access_as_user

# Scopes
SCOPES=Files.ReadWrite.All offline_access

# OneDrive upload path
ONEDRIVE_UPLOAD_ROOT=Apps/Alfred/Uploads

# Office Add-in settings
ADDIN_ID=your-addin-guid
ADDIN_SOURCE_URL=https://localhost:3900/office-addin/
ADDIN_ALLOWED_ORIGINS=https://*.office.com,https://*.sharepoint.com,alfred://*

# HTTP API server (for add-in communication)
HTTP_PORT=3100
CORS_ORIGINS=https://localhost:3900,alfred://*

